<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="660px"
        android:layout_height="660px">

        <ImageView
            android:layout_width="580px"
            android:layout_height="660px"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/dialog_order"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="580px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="70px"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为了确保是您本人操作，以及防止小孩进行误操作，请您输入登录密码来确认订单："
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_middle"/>

            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:background="@drawable/shape_et_group_bg"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:paddingBottom="10px"
                android:paddingLeft="10px"
                android:singleLine="true"
                android:textColorHint="@color/gray_darker"
                android:textSize="@dimen/text_middle"/>



        </com.zhy.autolayout.AutoLinearLayout>


        <Button
            android:id="@+id/btn_yes"
            android:layout_width="350px"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:background="@drawable/shape_modify"
            android:text="确认"
            android:textColor="@color/white_text"
            android:textSize="36px"/>

        <ImageView
            android:id="@+id/iv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/quxiao_dialog"/>

    </com.zhy.autolayout.AutoRelativeLayout>



</com.zhy.autolayout.AutoRelativeLayout>