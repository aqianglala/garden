<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@android:color/white"
                                     android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/menu_avator"
        android:layout_height="@dimen/menu_avator"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:src="@mipmap/touxiang"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:text="@string/login"
        android:textColor="@color/gray_darker"
        android:textSize="@dimen/text_small"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_feedback"
        style="@style/menu_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/menu_item_text"
            android:text="@string/suggestion_feedback"/>

        <ImageView
            style="@style/menu_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        style="@style/menu_line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_modify_pswd"
        style="@style/menu_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/menu_item_text"
            android:text="@string/modify_pswd"/>

        <ImageView
            style="@style/menu_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        style="@style/menu_line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_contact"
        style="@style/menu_rl"
        android:background="?attr/selectableItemBackground">

        <TextView
            style="@style/menu_item_text"
            android:text="@string/contact"/>

        <ImageView
            style="@style/menu_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="110px"
        android:background="@drawable/selector_logout"
        android:clickable="true"
        android:text="@string/exit_account"/>

</com.zhy.autolayout.AutoLinearLayout>