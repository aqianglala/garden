<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:visibility="gone"
        style="@style/checkbox"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox"
        android:layout_marginLeft="@dimen/margin"
        android:orientation="vertical"
        android:paddingBottom="10px"
        android:paddingRight="20px"
        android:paddingTop="20px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="110px"
                android:layout_height="match_parent"
                android:background="@drawable/shape_image"
                android:padding="2dp"
                app:layout_auto_baseheight="width">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/df_img"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巧克力包"
                    android:textColor="@color/black_text"
                    android:textSize="32px"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/item_gray_text"
                        android:text="产品编号："/>

                    <TextView
                        android:id="@+id/tv_number"
                        style="@style/item_gray_text"
                        android:text="3123"/>

                    <TextView
                        style="@style/item_gray_text"
                        android:layout_marginLeft="20px"
                        android:text="预估数："/>

                    <TextView
                        android:id="@+id/tv_prediction"
                        style="@style/item_gray_text"
                        android:text="3123"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_weight"
                        style="@style/item_gray_text"
                        android:text="80g/袋"/>

                    <TextView
                        style="@style/item_gray_text"
                        android:layout_marginLeft="20px"
                        android:text="退货率："/>

                    <TextView
                        android:id="@+id/tv_back"
                        style="@style/item_gray_text"
                        android:text="9.16%"/>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_special"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="￥33"
                android:textColor="@color/colorPrimary"
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_price"
                style="@style/item_gray_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/tv_special"
                android:text="￥2.50"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_gray_text"
                    android:text="团购"/>

                <TextView
                    android:id="@+id/tv_group"
                    android:layout_width="62px"
                    android:layout_height="32px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_et_group_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="0"
                    android:textColor="@color/pink_text"
                    android:textSize="12sp"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="180px"
                android:layout_height="54px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/jian"
                    android:clickable="true"
                    app:layout_auto_baseheight="width"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="60px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="1"
                        android:textColor="@color/pink_text"
                        android:textSize="26px"/>

                    <View
                        style="@style/line_horizontal"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/jia"
                    android:clickable="true"
                    app:layout_auto_baseheight="width"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_tejia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/tejia"/>

    </RelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>