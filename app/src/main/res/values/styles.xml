<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullBleedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- API 19 theme customizations can go here. -->
    </style>

    <style name="RadioButton" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="et_match_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:padding">20px</item>
        <item name="android:background">@drawable/et_background</item>
    </style>

    <style name="btn_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="menu_arrow">
        <item name="android:layout_width">@dimen/menu_item_text</item>
        <item name="android:layout_height">@dimen/menu_item_text</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">47px</item>
        <item name="android:background">@mipmap/jiantou</item>
    </style>

    <style name="menu_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">50px</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/menu_item_text</item>
        <item name="android:textSize">@dimen/menu_item_text</item>
    </style>

    <style name="menu_line">
        <item name="android:layout_width">@dimen/menu_line_width</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/menu_line</item>
    </style>

    <style name="menu_rl">
        <item name="android:clickable">true</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
