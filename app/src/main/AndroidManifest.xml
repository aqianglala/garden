<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.softgarden.garden.jiadun_android"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.softgarden.garden.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/jiadunicon"
        android:label="@string/app_label"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <meta-data
            android:name="design_width"
            android:value="750">
        </meta-data>
        <meta-data
            android:name="design_height"
            android:value="1334">
        </meta-data>

        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.softgarden.garden.view.start.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.softgarden.garden.view.start.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.softgarden.garden.view.shopcar.activity.ShopcarActivity"
            android:label="@string/label_shopcar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.softgarden.garden.view.login.LoginActivity"
            android:label="@string/lable_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.softgarden.garden.view.password.ForgetPswdActivity"
            android:label="修改密码"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.softgarden.garden.view.password.ForgetNextActivity"
            android:label="@string/label_forget_pswd"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.softgarden.garden.view.pay.PayActivity"
            android:label="@string/lable_pay"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.softgarden.garden.view.feedback.activity.SuggestionActivity"
            android:label="@string/lable_suggestion"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.softgarden.garden.view.historyOrders.OrderDetailActivity"
            android:label="@string/lable_order_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.softgarden.garden.view.shopcar.activity.ConfirmOrderActivity"
            android:label="@string/confirm_order"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.softgarden.garden.view.feedback.activity.PhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.softgarden.garden.view.back.activity.BackDetailActivity"
                  android:label="@string/label_back_detail"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>